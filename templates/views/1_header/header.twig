{% if menu %}

	<!-- START LOADER HTML -->
	<div class="fullpage-loader">
		<div class="fullpage-loader__logo">
			<img loading="lazy" src="{{asset('favicon.svg')}}" alt="load">
		</div>
	</div>
	<!-- END LOADER HTML -->


	<header class="header">
		<div class="header__mobileBelt">
			<a class="header__mobileBelt__branding" href="{{fn('pll_home_url')}}">
				<img loading="lazy" class="header__mobileBelt__branding--logo" src="{{options.logo['url']}}" alt="{{options.logo['alt']}}">
			</a>
			<!-- Opem Nav __ MOBILE -->
			<div class="header__mobileBelt__menuButton menuButton"> 
				<svg class="" viewBox="0 0 100 100" >
					<path d="m 30,33 h 40 c 0,0 9.044436,-0.654587 9.044436,-8.508902 0,-7.854315 -8.024349,-11.958003 -14.89975,-10.85914 -6.875401,1.098863 -13.637059,4.171617 -13.637059,16.368042 v 40"/>
					<path d="m 30,50 h 40"/>
					<path d="m 30,67 h 40 c 12.796276,0 15.357889,-11.717785 15.357889,-26.851538 0,-15.133752 -4.786586,-27.274118 -16.667516,-27.274118 -11.88093,0 -18.499247,6.994427 -18.435284,17.125656 l 0.252538,40"/>
				</svg>
			</div>
		</div>

		
		<div class="header__main">
			<div class="header__main__left">
				<a class="header__main__branding" href="{{home_url()}}">
					<img loading="lazy" class="header__main__branding--logo" src="{{options.logo['url']}}" alt="{{options.logo['alt']}}">
				</a>

				
				<nav class="header__main__nav">  
					<ul class="menu">
						{% for item in menu.items %}
							<li class="{{ item.classes|join(' ') }} txt-14">
								{% if item.link %}
									<a href="{{ item.link }}">
										{{ item.title }}
									</a>
								{% endif %}
							</li>
						{% endfor %}
					</ul>
				</nav>

				{% if options.socialmedia %}
					<div class="header__main__socialmedia">
						{% for single in  options.socialmedia %}
							<a class="header__main__socialmedia__single" href="{{single.url}}">
								<span class="header__main__socialmedia__single--icon">{{file_get_contents(single.icon)}}</span>
							</a>
						{% endfor %}
					</div>
				{% endif %}
			</div>

			<div class="header__main__right">
				{% if options.contact_tel %}
					<ul class="header__main__right__tel">
						{% for single in options.contact_tel %}
							<li class="header__main__right__tel--single txt-22">
								<a href="tel:{{extract_phoneNumber(single.tel)}}">{{single.tel}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
				
				<a class="header__main__right--mail txt-22" href="mailto:{{extract_email(options.contact_mail)}}">{{options.contact_mail}}</a>
			</div>
		</div>
	</header>
{% endif %}
